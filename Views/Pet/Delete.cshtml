@model Pet

<h2>Delete Pet</h2>
<hr />

@if (ViewData["ErrorMessage"] != null)
{
    <p class="text-danger">@ViewData["ErrorMessage"]</p>
}

<div>
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="Name">Name</label>
        </dt>
        <dd class="col-sm-10">
            @Model?.Name
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Species"></label>
        </dt>
        <dd class="col-sm-10">
            @Model?.Species
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Age"></label>
        </dt>
        <dd class="col-sm-10">
            @Model?.Age
        </dd>
        <dt class="col-sm-2">
            <label asp-for="UserId"></label>
        </dt>
        <dd class="col-sm-10">
            @Model?.UserId
        </dd>
    </dl>
</div>

<form method="post" asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="UserId" />
    <input type="submit" value="Delete pet" class="btn btn-danger" onclick="javascript: return confirm('Are you sure you want to delete this pet?');" />
</form>

<div>
    <a asp-controller="Pet" asp-action="Index">Back to list</a>
</div>