@model User

<h2>Deleting @Model.Name</h2>
<hr />

@if (ViewData["ErrorMessage"] != null)
{
    <p class="text-danger">@ViewData["ErrorMessage"]</p>
}

<div>
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="Name"></label>
        </dt>
        <dd class="col-sm-10">
            @Model?.Name
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Surname"></label>
        </dt>
        <dd class="col-sm-10">
            @Model?.Surname
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Age"></label>
        </dt>
        <dd class="col-sm-10">
            @Model?.Age
        </dd>

    </dl>
</div>

<form method="post" asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete user" class="btn btn-danger" onclick="javascript: return confirm('Are you sure you want to delete this user?');" />
</form>

<div>
    <a asp-controller="User" asp-action="Index">Back to list</a>
</div>